@page
@model TalkingStumpShop.Pages.ContactsModel
@{
    <div class="container py-5">
        <div class="row justify-content-center mb-3">
            <div class="col-md-12 col-xl-12">
                <div class="contact-info rounded mb-2">
                    <div class="title col-xl-5 col-lg-5 col-md-6 col-sm-8">Адрес:</div>
                    <div class="text">
                        Ул. Дубовая, 123<br>
                        Город Прекрасноград<br>
                        Почтовый индекс: 12345
                    </div>
                </div>
                <div class="contact-info rounded mb-2">
                    <div class="title col-xl-5 col-lg-5 col-md-6 col-sm-8">Телефон:</div>
                    <div class="text">+7 (123) 456-78-90</div>
                </div>
                <div class="contact-info rounded mb-2">
                    <div class="title col-xl-5 col-lg-5 col-md-6 col-sm-8">Электронная почта:</div>
                    <div class="text">info@talkingstump.ru</div>
                </div>
                <div class="contact-info rounded mb-2">
                    <div class="title col-xl-5 col-lg-5 col-md-6 col-sm-8">Часы работы:</div>
                    <div class="text">
                        Пн-Пт: 9:00 - 18:00<br>
                        Сб: 10:00 - 16:00<br>
                        Вс: Выходной
                    </div>
                </div>
                <div class="contact-info rounded socials mb-2">
                    <div class="row justify-content-center">
                        <div class="col-xl-2 col-lg-3 col-md-4 col-6">
                            <a href="https://www.vk.com" target="_blank" rel="noopener noreferrer"><img src="contacts/vk.svg" alt="" class="img-fluid"></a>
                        </div>
                        <div class="col-xl-2 col-lg-3 col-md-4 col-6">
                            <a href="https://www.instagram.com" target="_blank" rel="noopener noreferrer"><img src="contacts/instagram.svg" alt="" class="img-fluid"></a>
                        </div>
                        <div class="col-xl-2 col-lg-3 col-md-4 col-6">
                            <a href="https://www.youtube.com" target="_blank" rel="noopener noreferrer"><img src="contacts/youtube.svg" alt="" class="img-fluid"></a>
                        </div>
                        <div class="col-xl-2 col-lg-3 col-md-4 col-6">
                            <a href="https://www.telegram.com" target="_blank" rel="noopener noreferrer"><img src="contacts/telegram.svg" alt="" class="img-fluid"></a>
                        </div>
                    </div>
                </div>

                <div class="contact-form rounded">
                    <h3 class="title">Свяжитесь с нами!</h3>
                    <div style="margin-bottom: 10px;">
                        Не стесняйтесь связываться с нами для заказов, вопросов и предложений. Мы всегда готовы помочь вам создать что-то уникальное и особенное из дерева и эпоксидной смолы. Пожалуйста, посетите нас или свяжитесь с нами, чтобы обсудить ваши идеи и проекты!
                    </div>
                    <div>
                        <input class="text-input" id="textfield" name="email" type="text" placeholder="E-mail">
                    </div>
                    <div>
                        <textarea class="text-input" id="textfield" name="message" type="text" placeholder="Введите сообщение" rows="10"></textarea>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
