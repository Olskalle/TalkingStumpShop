<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TalkingStumpShop</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TalkingStumpShop.styles.css" asp-append-version="true" />
    <script src="js/carousel.js"></script>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light navbar-toggleable-sm border-bottom box-shadow header">
            <div class="container">
                <div class="navbar-brand" asp-area="" asp-page="/Index">
                    <a href="Index">
                        <div class="header-icon">
                            <img class="brand-icon" src="src/header_icon.svg" alt="icon">
                            <img class="brand-name" src="src/name.svg" alt="icon">
                        </div>
                    </a>
                </div>
                <button class="navbar-toggler " type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/AdminProducts">Товары</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/AdminNews">Новости</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/AdminPasswordChange">Смена пароля</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="wrapper">
        <div class="left-sidebar rounded">
            <div class="left-sidebar-sticky d-flex flex-column mt-4">
                <a class="btn btn-primary btn-sm" href="AdminProducts">Товары</a>
                <a class="btn btn-primary btn-sm" href="AdminNews">Новости</a>
                <a class="btn btn-primary btn-sm" href="AdminPasswordChange">Смена пароля</a>
            </div>
        </div>

        <main role="main" class="pb-3 align-baseline w-100">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted footer">
        <div class="container footer-text">
            &copy; 2023 - TalkingStumpShop
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>